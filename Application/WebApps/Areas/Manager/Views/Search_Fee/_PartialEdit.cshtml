@using ObjectInfos;
@using BussinessFacade;
@using BussinessFacade.ModuleMemoryData
@using System.Xml
@model Sys_Search_Fix_Info

@{
    ViewBag.Title = "Chi tiết phí tìm kiếm";
    Layout = "~/ViewsShared/_Layout.cshtml";
}

<style>
    /*độ rộng tên cột title từng trang là khác nhau nên khai báo ở trang đó luôn*/
    .div-search-title > div {
        width: 150px;
    }
</style>

<div class="divCover">
    <div class="d-nav">
        <img src="~/Content/icons/Body-icon-home.png" /> I
        Quản lý
        <span class="red">></span>
        <a href="/quan-ly-phi-tim-kiem/danh-sach-phi-tim-kiem">Quản lý phí tìm kiếm</a>
    </div>
</div>
<div class="divCover">
    <div class="classLine">
    </div>
</div>


@*Notify*@
<div class="divCover">
    @Html.Partial("~/Areas/Home/Views/Shared/_Partial_Quick_Notify.cshtml")
</div>

<div class="d-main">
    <div class="divCover">
        <div class="classTitle">
            <div class="div-title-content"> SỬA PHÍ TÌM KIẾM</div>
        </div>
    </div>

    <div class="divCover">

        <div class="div-search-ad">
            <div class="div-search-title">
                <div>Quốc tịch<i class="redspan">(*)</i></div>
            </div>
            <div class="div-search-content">
                <div>
                    <input type="text" value="@Model.Country_Name" disabled="disabled" />
                </div>
            </div>
        </div>

        <div class="div-search-ad">
            <div class="div-search-title">
                <div>Đối tượng <i class="redspan">(*)</i></div>
            </div>
            <div class="div-search-content">
                <div>
                    <input type="text" value="@Model.Search_Object_Name" disabled="disabled" style="width: 250px" />
                </div>
            </div>

            <div class="div-search-title">
                <div>Loại tìm kiếm</div>
            </div>
            <div class="div-search-content">
                <div>
                    <input type="text" value="@Model.Search_Type_Name" disabled="disabled" />
                </div>
            </div>
        </div>

        <div class="div-search-ad">
            <div class="div-search-title">
                <div>Lệ phí (VNĐ)<i class="redspan">(*)</i></div>
            </div>
            <div class="div-search-content">
                <div>
                    <input type="text" style="width: 250px;" value="@Model.Amount.ToString("#,##0.##")" id="txtAmount" onkeyup="jsFormatNumber(this.value, this.id)" />
                </div>
            </div>

            <div class="div-search-title">
                <div>Lệ phí (USD)<i class="redspan">(*)</i></div>
            </div>
            <div class="div-search-content">
                <div>
                    <input type="text" value="@Model.Amount_usd.ToString("#,##0.##")" id="txtAmount_usd" onkeyup="jsFormatFloatNumber(this, this.length,2)" />
                </div>
            </div>
        </div>
    </div>

    <div class="divCover">
        <div class="div-search-btn" style="width:600px;margin-top: 5px;">
            <input type="submit" class="btn-default" value="Đồng ý" onclick="return onEdit()" />
            <input type="submit" class="btn-default" value="Thoát" onclick="return onBack()" />
        </div>
    </div>

</div>

<script>

    $(document).ready(function () {
        $("#txtAmount").focus();
    });

    function onBack() {
        try {

            if (CheckSessionTimeOut() == false) {
                return false;
            }

            var url = "/quan-ly-phi-tim-kiem/danh-sach-phi-tim-kiem/";
            window.location.href = url;
        } catch (e) {
            CreateRollingWaitingIcon(true);
            alert(e);
        }
    }

    function onEdit() {
        if (validateForm()) {
            var formData = new FormData();
            collectDataToUser(formData);
            $.ajax({
                url: '/quan-ly-phi-tim-kiem/do-edit',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                traditional: true,
                async: true,
                headers: { "cache-control": "no-cache" },
                beforeSend: function () {
                    CreateRollingWaitingIcon(true);
                },
                success: function (data) {
                    CreateRollingWaitingIcon(false);
                    if (data.success == "-1") {
                        jError("Lỗi check lại kết nối tới server");
                        return false;
                    } else {
                        jAlert('Sửa thông tin thành công!', "THÔNG BÁO", function () {
                            var url = "/quan-ly-phi-tim-kiem/danh-sach-phi-tim-kiem/";
                            window.location.href = url;
                        });
                    }
                },
                error: function (e) {
                    console.log(e);
                }
            });
        }
    }

    function validateForm() {
        var txtAmount = $("#txtAmount").val();
        if (txtAmount == "" || txtAmount == "0") {
            jError("Phí VNĐ không được để trống", "lỗi", function () {
                $('#txtAmount').focus();
            });
            return false;
        }

        var txtAmount_usd = $("#txtAmount_usd").val();
        if (txtAmount_usd == "" || txtAmount_usd == "0") {
            jError("Phí USD không được để trống", "lỗi", function () {
                $('#txtAmount_usd').focus();
            });
            return false;
        }

        return true;
    }


    function collectDataToUser(formData) {
        formData.append('p_obj.Id', @Model.Id);
        formData.append('p_obj.Country_Id', @Model.Country_Id);
        formData.append('p_obj.Search_Object', @Model.Search_Object);
        formData.append('p_obj.Search_Type', @Model.Search_Type);
        formData.append('p_obj.Amount', parseInt($("#txtAmount").val().replace(/,/g, "")));
        formData.append('p_obj.Amount_usd', parseFloat($("#txtAmount_usd").val()));
	}

</script>
