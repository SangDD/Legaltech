@using ObjectInfos.ModuleTrademark
@using ObjectInfos
@using System.Linq
@model AppDocumentOthersInfo
@{
    string _id = Model.Model_Id.ToString();

    string pfileName = "pTreefileName" + _id;
    string txtDocument = "TreetxtTaiLieuKhac" + _id;
    string txtDocumentSoTrang = "Treetxttailieuanhsotrang" + _id;
    string txtDocumentGhiChu = "TreetxttailieuanhGhiChu" + _id;
    string txtMaxfile = "treetxtMaxfile" + _id;
    string divDocumnetNo = "treedivDocumnetNo" + _id;
    string btnXoa = "treebtnXoa" + _id;
    string btnTaiFile = "treebtnTaiFile" + _id;
    string btnremoveFile = "treebtnRemove" + _id;

    string _refid = Model.IdRef.ToString();

    string[] _arr1 = Model.Filename.Split('/');
    string _filename1 = WebApps.Resources.Resource.FileDinhKem;
    if (_arr1.Length > 0)
    {
        _filename1 = _arr1[_arr1.Length - 1];
    }
}
 
<div class="div-search-ad" id="@divDocumnetNo" style="margin-left:20px">
    <div class="div-search-title">
        <div style="width: 100px;"> @WebApps.Resources.Resource.lblTenTaiLieu :</div>
    </div>
    <div class="div-search-content">
        <div>
            <input type="text" class="clssListUploadIndusDesign" maxlength="200" value="@Model.Documentname" id="@txtDocument" meta-data2="2" meta-data="@_id" data-id="@Model.Id">
        </div>
    </div>

    <div class="div-search-title">
        <div>  Số trang</div>
    </div>
    <div class="div-search-content">
        <div>
            <input type="text" style="width:90px" maxlength="4" id="@txtDocumentSoTrang" value="@Model.Char01" />
        </div>
    </div>

    <div class="div-search-title">
        <div>  Ghi chú</div>
    </div>
    <div class="div-search-content">
        <div>
            <input type="text" maxlength="1000" id="@txtDocumentGhiChu" value="@Model.Char02" />
        </div>
    </div>

    <div class="div-search-content">
        <div>
            <div class="file-upload btn btn-primary" style="margin-left:2px;">
                <span>@WebApps.Resources.Resource.lblTaiFile</span>
                <input type="file" onchange="return funcTreeChoiseFileDocOther('@pfileName', '@txtMaxfile', '@txtDocument', '@btnremoveFile', '@_refid');" name="@pfileName" id="@pfileName" class="upload fileuploadurl" />
            </div>

            <input type="text" class="classMaxfile" id="@txtMaxfile" value="@_filename1" readonly >

            <button onclick="return funcTreeRemoveDocument('@divDocumnetNo', 2)" id="@btnXoa" style="width: 30px;margin-left:2px">
                <i class="fa fa-minus-circle"></i>
            </button>
        </div>
    </div>
</div> 