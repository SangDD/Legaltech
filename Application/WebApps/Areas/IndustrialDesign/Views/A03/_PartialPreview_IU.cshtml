<script>

    function funGetData_Preview_UI_A03(url) {
        try {
          
            var formData = new FormData();
            formData.append("pInfo.Appcode", $("#txtAppCode").val());
            formData.append("pInfo.Languague_Code", '@WebApps.CommonFunction.AppsCommon.GetCurrentLang()');

            //Thông tin chủ đơn
            if (funcThongTinChuDon_Exp(formData, "1") != true) {
                return false;
            }

            if ($("#1_ckbTacGiaDongThoi").is(':checked')) {
                formData.append("pInfo.Master_Type", "TGDT");
            } else {
                formData.append("pInfo.Master_Type", "CDK");
            }
            // đại diện chủ đơn
  
            if (_IsViewFlag == "1")
            {
                if (funcThongTinDaiDienChuDon_View(formData, "2") != true) {
                    return false;
                }
            }
            else
            {
                if (funcThongTinDaiDienChuDon(formData, "2") != true) {
                    return false;
                }
            }

            if (funcChuDonKhac(formData) != true) {
                return false;
            }

            var v_RepMasterType = $("input[name='_2_DaiDienChuDon']:checked").val();
            formData.append("pInfo.Rep_Master_Type", v_RepMasterType);

            //Tài liệu khác trong đơn
            reponse = funcGetTenTaiLieuKhac(formData);
            if (reponse == false) {
                return false;
            }


            //Lấy thông tin detail
            reponse = funcGetAppDetail(formData, 1);
            if (reponse == false) {
                return false;
            }
            // hàng hóa
            reponse = funcGetDataClassInfo(formData);
            if (reponse == false) {
                return false;
            }


            formData.append("pInfo.Status", '@((int)Common.CommonData.CommonEnums.App_Status.DaGui_ChoPhanLoai_Admin)');
            var v_AppCode = $("#txtAppCode").val();
            if (v_AppCode === "") {
                $('#txtAppCode').focus().val('');
                showError('@Html.Raw(Resource.TM3B_ChonLoaiDonDK)');
                return false;
            }

            // đại diện chủ đơn
            formData.append("pInfo.Appcode", v_AppCode);
           
            var v_RepMasterType = $("input[name='_2_DaiDienChuDon']:checked").val();
            if (v_RepMasterType === "" || v_RepMasterType == undefined) {
                showError('@Html.Raw(Resource.TM2B_ChonDaiDienChuDon)');
                $("#_2_rdoNguoiDaiDienPL").focus()
                return false;
            }
            formData.append("pInfo.Rep_Master_Type", v_RepMasterType);
            //formData.append("pInfo.Status", ptype);

            //Tài liệu khác trong đơn
            reponse = funcGetTenTaiLieuKhac(formData);
            if (reponse == false) {
                return false;
            }

            // lấy thông tin bộ ảnh
            reponse = funcGetTenTaiLieuBoAnhExport(formData, '@IsViewFlag');
            if (reponse == false) {
                return false;
            }

            //reponse = funcGetCamKetChuDon(formData);
            //if (reponse == false) {
            //    return false;
            //}

            $.ajax({
                url: '/indus-design/ket_xuat_file_IU',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                traditional: true,
                dataType: "json",
                enctype: 'multipart/form-data',
                async: true,
                headers: { "cache-control": "no-cache" },
                beforeSend: function () {
                    CreateRollingWaitingIcon(true);
                },
                success: function (data) {
                    CreateRollingWaitingIcon(false);
                    if (data != null && data.status >= 0) {
                        return true;
                    } else {
                        return false;
                    }
                },
                error: function (e) {
                    CreateRollingWaitingIcon(false);
                    console.log(e);
                }
            });

            return true;
        } catch (e) {

            CreateRollingWaitingIcon(false);
            alert(e.message);
            return false;
        }
    }

    function funcGetTenTaiLieuBoAnhExport(formData, pisview) {
        try {
            var item = 0;
            if (pisview == 1) {
                $(".clssListUploadIndusDesign").each(function () {
                    //alert($(this).attr("meta-data2"));
                    formData.append("pAppDocIndusDesign[" + item + "].FILELEVEL", $(this).attr("meta-data2"));
                    item++;
                });
                return true;
            }
            // checkvalidate

            var _documentno = "0";
            var _check = true;
            var _controllevel = 1;
            var _inputfileid = "";
            $(".clssListUploadIndusDesign").each(function () {
                _controllevel = $("#" + this.id).attr("meta-data2")
                _documentno = $("#" + this.id).attr("meta-data");
                _inputfileid = "pTreefileName" + _documentno;
                formData.append("pAppDocIndusDesign[" + item + "].keyFileUpload", this.id);
                if ($("#" + this.id).val().trim() == "") {
                    showError('Tên tài liệu không được để trống');
                    $("#" + this.id).focus();
                    _check = false;
                    return false;
                }
                if (_controllevel == "2") {
                    // nếu là tài liệu cấp 2 thì check file
                    var file = document.getElementById(_inputfileid);
                    if (file == undefined) {
                        showError('Chưa tải file đính kèm');
                        $("#" + this.id).focus();
                        _check = false;
                        return false;
                    }
                    if (file.files.length == 0) {
                        showError('Chưa tải file đính kèm');
                        $("#" + this.id).focus();
                        _check = false;
                        return false;
                    }
                }

                item++;
            });
            if (_check == false) {
                return false;
            }

            item = 0;
            _documentno = "0";
            $(".clssListUploadIndusDesign").each(function () {
                formData.append("pAppDocIndusDesign[" + item + "].keyFileUpload", this.id);
                formData.append("pAppDocIndusDesign[" + item + "].Documentname", $("#" + this.id).val());
                formData.append("pAppDocIndusDesign[" + item + "].FILETYPE", "2");
                formData.append("pAppDocIndusDesign[" + item + "].FILELEVEL", $("#" + this.id).attr("meta-data2"));
                _documentno = $("#" + this.id).attr("meta-data");
                formData.append("pAppDocIndusDesign[" + item + "].Char01", $("#Treetxttailieuanhsotrang" + _documentno).val());
                formData.append("pAppDocIndusDesign[" + item + "].Char02", $("#TreetxttailieuanhGhiChu" + _documentno).val());
                formData.append("pAppDocIndusDesign[" + item + "].ParentId", _documentno);
                item++;
            });
            return true;
        } catch (e) {
            console.log(e.message);
            return false;
        }
    }

    function funcPreViewApplication_IU() {
        var preturn = funGetData_Preview_UI_A03("/indus-design/ket_xuat_file_IU");
        if (preturn == true || preturn == undefined) {
            OpenPreview("/indus-design/Pre-View");
        }
    }

    function funcPreViewFee() {

        var formData = new FormData();
        var _showerror = 0;

        //Lấy thông tin detail
        var reponse = funcGetAppDetail(formData, _showerror);
        if (reponse == false) {
            return false;
        }

        // hàng hóa
        reponse = funcGetDataClassInfo(formData);
        if (reponse == false) {
            return false;
        }

        if ($("#1_ckbTacGiaDongThoi").is(':checked')) {
            formData.append("pInfo.Master_Type", "TGDT");
        } else {
            formData.append("pInfo.Master_Type", "");
        }
        if (funcChuDonKhac(formData) != true) {
            return false;
        }
        
        // đại diện chủ đơn
        formData.append("pInfo.Appcode", $("#txtAppCode").val());
        var v_RepMasterType = $("input[name='_2_DaiDienChuDon']:checked").val();
        formData.append("pInfo.Rep_Master_Type", v_RepMasterType);

        //Lấy thông tin tài liệu có trong đơn
        reponse = funGetDocumentFile(formData);
        if (reponse == false) {
            return false;
        }

        //Tài liệu khác trong đơn
        reponse = funcGetTenTaiLieuKhac(formData);
        if (reponse == false) {
            return false;
        }

        // lấy thông tin bộ ảnh
        reponse = funcGetTenTaiLieuBoAnh(formData, _showerror);
        if (reponse == false) {
            return false;
        }

        $.ajax({
            url: "/indus-design/getFee",
            type: 'POST',
            data: formData,
            dataType: "json",
            async: true,
            cache: false,
            traditional: true,
            contentType: false,
            processData: false,
            beforeSend: function () {
                CreateRollingWaitingIcon(true);
            },
            success: function (data) {
                CreateRollingWaitingIcon(false);
                if (data != null) {

                    $("#divPopUpFee").html(data.PartialTableListFees);
                    ShowPopupDialog_Ipace('divWrapperPopUpFee', "Thông tin fee", 800, 1200);
                }
                return false;
            }
        });
    }

    function OpenPreview(url) {
        try {
            w = 1100; //độ rộng form popup
            h = 600;//chiều cao
            var left = (screen.width - w) / 2;
            var top = (screen.height - h) / 4;  // for 25% - devide by 4  |  for 33% - devide by 3
            var targetWin = window.open(url, '@Resource.TM3B_XemThongTinDon', 'toolbar=no, location=no, directories=no, status=no, menubar=no, scrollbars=no, resizable=no, copyhistory=no, width=' + w + ', height=' + h + ', top=' + top + ', left=' + left);

        } catch (e) {
        }
    }
</script>