    <div class="divCover">
        <div class="div-search-btn" style="width:600px;margin-top: 5px;">
            <input type="submit" class="btn-default" value="@WebApps.Resources.Resource.Luu" onclick="return doAddNewUser()" />
            @*<input type="submit" class="btn-default" value="Thoát" onclick="return back()" />*@
        </div>
    </div>
</div>

<script>
    var usernameAdd = '',
        fullNameAdd = '',
        passwordAdd = '',
        rePasswordAdd = '',
        dateOfBirthAdd = '',
        sexAdd = '',
        emailAdd = '',
        phoneAdd = '',
        statusAdd = '',
        typeAdd = '',
        GroupIdAdd = '';
    $(document).ready(function () {
        $.datetimepicker.setLocale('vi');
        $('.datetimepicker').datetimepicker({
            timepicker: false,
            format: 'd/m/Y',
            //formatTime: 'H:i',
            formatDate: 'd/m/Y',
            mask: '39/19/9999',
            validateOnBlur: false,
            scrollInput: false
        });

        $('#cboCountry').multipleSelect({
            filter: true,
            single: true,
            isdatastring: false,
            maxHeight: 150,
            placeholder: "-- @WebApps.Resources.Resource.ChonQuocTich --"
        });
    });

    function collectDataToAddNewUser(formData) {
        formData.append('userInfo.Username', usernameAdd);
        formData.append('userInfo.FullName', fullNameAdd);
        formData.append('userInfo.Address', $("#txtAddress").val());
        formData.append('userInfo.Password', passwordAdd);
        formData.append('userInfo.DateOfBirth', dateOfBirthAdd);
        formData.append('userInfo.Sex', sexAdd);
        formData.append('userInfo.Email', emailAdd);
        formData.append('userInfo.Phone', phoneAdd);
        formData.append('userInfo.Fax', $("#txtFaxAdd").val());
        formData.append('userInfo.Type', typeAdd);
        formData.append('userInfo.Status', statusAdd);

        formData.append('userInfo.Country', $("#cboCountry").val());
        formData.append('userInfo.Face_Link', $("#txtface_link").val());
        formData.append('userInfo.Linkedin_Link', $("#txtlinkedin").val());
        formData.append('userInfo.Wechat_Link', $("#txtwechat_link").val());
        formData.append('userInfo.Other_Link', $("#txtOther_Link").val());

        //formData.append('userInfo.Company_Name', $("#txtcompany_name").val());
        //formData.append('userInfo.Main_Business', $("#txtmain_business").val());
        //formData.append('userInfo.Copyto', $("#txtcopyto").val());



        //formData.append('userInfo.Reason_Select', $("#cboReasonSelect").val());
        //formData.append('userInfo.Request_Credit', $("#cboRequestCredit").val());
        //formData.append('userInfo.Customer_Code', $("#txtCustomer_Code").val());
        //formData.append('userInfo.Contact_Person', $("#cboContact_Person").val());

        formData.append('userInfo.Other_Type', $("#cboLawerType").val());
        formData.append('userInfo.Main_Business', $("#txtmain_business").val());

        formData.append('userInfo.Hourly_Rate', $("#txthourly_rate").val().replace(/,/g, ""));
        formData.append('userInfo.Hourly_Rate_USD', $("#txthourly_rate_usd").val().replace(/,/g, ""));

        formData.append('userInfo.Title', $("#txtTitle").val());
        formData.append('userInfo.Company_Name', $("#txtCompany_Name").val());
        formData.append('userInfo.Referee', $("#cboReferee").val());

        formData.append('userInfo.Division', $("#txtDivision").val());
        formData.append('userInfo.Direct_Supervisor', $("#txtDirect_Supervisor").val());


        formData.append('GroupId', GroupIdAdd);
    }



    function back() {
        var url = "/luat-su/quan-ly-luat-su/";
        window.location.href = url;
    }

    function doAddNewUser() {
        if (validateFormAddNewUser()) {
            var formData = new FormData();
            collectDataToAddNewUser(formData);
            $.ajax({
                url: '/luat-su/quan-ly-luat-su/do-add-lawer',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                traditional: true,
                async: true,
                headers: { "cache-control": "no-cache" },
                beforeSend: function () {
                    CreateRollingWaitingIcon(true);
                },
                success: function (data) {
                    if (data != null) {
                        CreateRollingWaitingIcon(false);
                        if (onResponse(data)) {
                            var url = "/luat-su/quan-ly-luat-su/";
                            window.location.href = url;
                        }
                    }
                },
                error: function (e) {
                    console.log(e);
                }
            });
        }
    }

    function validateFormAddNewUser() {
        usernameAdd = $('#txtUsernameAdd').val().trim();
        fullNameAdd = $('#txtFullNameAdd').val().trim();
        passwordAdd = $('#txtPasswordAdd').val();
        rePasswordAdd = $('#txtRePasswordAdd').val();
        dateOfBirthAdd = $('#txtDateOfBirthAdd').val().trim();
        sexAdd = $('#cboSexAdd').val();
        emailAdd = $('#txtEmailAdd').val().trim();
        phoneAdd = $('#txtPhoneAdd').val().trim();
        typeAdd = $('#cboTypeAdd').val();
        statusAdd = $('#cboStatusAdd').val();
        GroupIdAdd = $('#cboGroupUser').val();
        if (usernameAdd === "") {
            jError("@Html.Raw(WebApps.Resources.Resource.TenDangNhap)" + "@Html.Raw(WebApps.Resources.Resource.KhongDuocDeTrong)", "@Html.Raw(WebApps.Resources.Resource.Loi)", function () {
                $('#txtUsernameAdd').focus();
            });
            return false;
        }

        if (fullNameAdd === "") {
            jError("@Html.Raw(WebApps.Resources.Resource.HoTen)" + "@Html.Raw(WebApps.Resources.Resource.KhongDuocDeTrong)", "@Html.Raw(WebApps.Resources.Resource.Loi)", function () {
                $('#txtFullNameAdd').focus();
            });
            return false;
        }

        if (passwordAdd === "") {
            jError("@Html.Raw(WebApps.Resources.Resource.MatKhau)" + "@Html.Raw(WebApps.Resources.Resource.KhongDuocDeTrong)", "@Html.Raw(WebApps.Resources.Resource.Loi)", function () {
                $('#txtPasswordAdd').focus();
            });
            return false;
        }
        if (rePasswordAdd === "") {
            jError("@Html.Raw(WebApps.Resources.Resource.MatKhauNhacLai)" + "@Html.Raw(WebApps.Resources.Resource.KhongDuocDeTrong)", "@Html.Raw(WebApps.Resources.Resource.Loi)", function () {
                $('#txtRePasswordAdd').focus();
            });
            return false;
        }
        if (passwordAdd.length < 6) {
            jError("@Html.Raw(WebApps.Resources.Resource.DoDaiMK)", "@Html.Raw(WebApps.Resources.Resource.Loi)", function () {
                $('#txtRePasswordAdd').focus();
            });
            return false;
        } else if (passwordAdd !== rePasswordAdd) {
            jError("@Html.Raw(WebApps.Resources.Resource.MatKhauKhongGiong)", "@Html.Raw(WebApps.Resources.Resource.Loi)", function () {
                $('#txtRePasswordAdd').focus();
                $("#txtRePasswordAdd").select();
            });
            return false;
        }

        if ($("#txtAddress").val() === "") {
            jError("@Html.Raw(WebApps.Resources.Resource.TM2B_DiaChiKhongDuocDeTrong)" , "@Html.Raw(WebApps.Resources.Resource.Loi)", function () {
                $('#txtAddress').val('');
                $('#txtAddress').focus();
            });
            return false;
        }

        var txtDateOfBirth = $("#txtDateOfBirthAdd").val();
        if (txtDateOfBirth != "" && txtDateOfBirth != "__/__/____") {
            if (checkDate("@Html.Raw(WebApps.Resources.Resource.NgaySinh)" , "#txtDateOfBirthAdd", txtDateOfBirth) == false) {
                return false;
            }
        }

        if (phoneAdd === "") {
            jError("@Html.Raw(WebApps.Resources.Resource.DienThoaiKhongDuocDeTrong)" , "@Html.Raw(WebApps.Resources.Resource.Loi)", function () {
                $('#txtPhoneAdd').val('');
                $('#txtPhoneAdd').focus();
            });
            return false;
        }

        if (emailAdd === "") {
            jError("@Html.Raw(WebApps.Resources.Resource.EmailKhongDuocDeTrong)" , "@Html.Raw(WebApps.Resources.Resource.Loi)", function () {
                $('#txtEmailAdd').focus();
            });
            return false;
        } else if (!IsvalidEmail(emailAdd)) {
            jError("@Html.Raw(WebApps.Resources.Resource.EmailFormat)" , "@Html.Raw(WebApps.Resources.Resource.Loi)", function () {
                $('#txtEmailAdd').focus();
            });
            return false;
        }

        var _cboCountry =  $("#cboCountry").val();
        if (_cboCountry == null) {
            jError("@Html.Raw(WebApps.Resources.Resource.QuocTichKhongDuocDeTrong)" , "@Html.Raw(WebApps.Resources.Resource.Loi)", function () {
                $('#cboCountry').multipleSelect('focus');
            });
            return false;
        }

        if (statusAdd == null) {
            jError("@Html.Raw(WebApps.Resources.Resource.TrangThai)" + "@Html.Raw(WebApps.Resources.Resource.KhongDuocDeTrong)"  , "@Html.Raw(WebApps.Resources.Resource.Loi)", function () {
                $('#cboStatusAdd').focus();
            });
            return false;
        }

        if (typeAdd == '@Convert.ToInt16(Common.CommonData.CommonEnums.UserType.Customer)') {
            var _txtcompany_name = $("#txtCompany_Name").val();
            if (_txtcompany_name == null || _txtcompany_name == "") {
                jError("@Html.Raw(WebApps.Resources.Resource.TenCongTyKhongDuocDeTrong)" , "@Html.Raw(WebApps.Resources.Resource.Loi)", function () {
                    $('#txtCompany_Name').focus();
                });
                return false;
            }

            var _txtmain_business = $("#txtmain_business").val();
            if (txtmain_business == null || txtmain_business == "") {
                jError("@Html.Raw(WebApps.Resources.Resource.NganhNgheChinhTrong)", "@Html.Raw(WebApps.Resources.Resource.Loi)", function () {
                    $('#txtmain_business').focus();
                });
                return false;
            }

        } else if (typeAdd == '@Convert.ToInt16(Common.CommonData.CommonEnums.UserType.Lawer)') {
            var _cboLawerType =  $("#cboLawerType").val();
            if (_cboLawerType == null) {
                jError("@Html.Raw(WebApps.Resources.Resource.LoaiLuatSu)" + "@Html.Raw(WebApps.Resources.Resource.KhongDuocDeTrong)", "@Html.Raw(WebApps.Resources.Resource.Loi)", function () {
                    $('#cboLawerType').focus();
                });
                return false;
            }

            var _txthourly_rate = $("#txthourly_rate").val();
            if (_txthourly_rate == null || _txthourly_rate == "") {
                jError("@Html.Raw(WebApps.Resources.Resource.SoTien1GioVND)" + "@Html.Raw(WebApps.Resources.Resource.KhongDuocDeTrong)", "@Html.Raw(WebApps.Resources.Resource.Loi)", function () {
                    $('#txthourly_rate').focus();
                });
                return false;
            }

            if (_txthourly_rate == "0") {
                jError("@Html.Raw(WebApps.Resources.Resource.SoTien1GioVND)" + "@Html.Raw(WebApps.Resources.Resource.LonHon0)", "@Html.Raw(WebApps.Resources.Resource.Loi)", function () {
                    $("#txthourly_rate").val('');
                    $("#txthourly_rate").focus();
                });
                return false;
            }

            var _txthourly_rate_usd = $("#txthourly_rate_usd").val();
            if (_txthourly_rate_usd == null || _txthourly_rate_usd == "") {
                jError("@Html.Raw(WebApps.Resources.Resource.SoTien1GioUSD)" + "@Html.Raw(WebApps.Resources.Resource.KhongDuocDeTrong)", "@Html.Raw(WebApps.Resources.Resource.Loi)", function () {
                    $('#txthourly_rate_usd').focus();
                });
                return false;
            }

            if (_txthourly_rate_usd == "0") {
                jError("@Html.Raw(WebApps.Resources.Resource.SoTien1GioUSD)" + "@Html.Raw(WebApps.Resources.Resource.LonHon0)", "@Html.Raw(WebApps.Resources.Resource.Loi)", function () {
                    $("#txthourly_rate_usd").val('');
                    $("#txthourly_rate_usd").focus();
                });
                return false;
            }
        }

        if (GroupIdAdd == "-1") {
            jError("@Html.Raw(WebApps.Resources.Resource.NhomQuyen)" + "@Html.Raw(WebApps.Resources.Resource.KhongDuocDeTrong)", "@Html.Raw(WebApps.Resources.Resource.Loi)", function () {
                $("#cboGroupUser").focus();
            });
            return false;
        }

