@using Common.CommonData
@using Common.Extensions
@using ObjectInfos;
@{
    List<NewsInfo> _list_data = new List<NewsInfo>();
    if (ViewBag.Obj != null)
    {
        _list_data = ViewBag.Obj;
    }
 
}

<div>
    <table class="table-lst-data" id="tableListHotnews">
        <thead>
            <tr>
                <th class="class30">STT</th>
                <th class="class200"   id="HEADER"  onclick="HotnewsSortByCol('HEADER')">Tiêu đề</th>
            </tr>
        </thead>
        <tbody>
            @if (_list_data.Count > 0)
            {
                foreach (var item in _list_data)
                {
                    <tr>
                        <td class="tdcenteralign">@item.STT</td>
                        <td class="tdleftalign">@item.Header</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="9">Không có dữ liệu</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="_ClassPage">
    <ul>
        @Html.Raw(ViewBag.Paging)
    </ul>
</div>
<script>
    $(function () {
        HotnewsChangeIConSortWhenSortColumns();
    });
</script>