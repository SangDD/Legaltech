@using Common.CommonData
@using Common.Extensions
@using ObjectInfos;
@{
    List<B_Remind_Info> _list_data = new List<B_Remind_Info>();
    if (ViewBag.Obj != null)
    {
        _list_data = ViewBag.Obj;
    }

}

<div>
    <table class="table-lst-data" id="tableListRemind">
        <thead>
            <tr>
                <th class="class30">STT</th>
                <th  class="tdleftalign" style="width:20%" id="CASE_CODE" onclick="RemindSortByCol('CASE_CODE')">Case code</th>

                <th class="tdleftalign" style="width:25%">@WebApps.Resources.Resource.Noidung</th>
                <th class="tdleftalign" style="width:15%" id='REQUEST_BY_NAME' onclick="RemindSortByCol('REQUEST_BY_NAME')">@WebApps.Resources.Resource.Nguoigui</th>
                <th style="width:10%" id='REQUEST_DATE' onclick="RemindSortByCol('REQUEST_DATE')">@WebApps.Resources.Resource.Thoigiangui</th>
                <th class="tdleftalign" style="width:15%" id='PROCESSOR_BY_NAME' onclick="RemindSortByCol('PROCESSOR_BY_NAME')">@WebApps.Resources.Resource.Processor</th>
                <th style="width:10%" id='PROCESSOR_DATE' onclick="RemindSortByCol('REQUEST_DATE')">@WebApps.Resources.Resource.Thoigiancho</th>
            </tr>
        </thead>
        <tbody>
            @if (_list_data.Count > 0)
            {
                foreach (var item in _list_data)
                {
                    <tr>
                        <td class="tdcenteralign">@item.STT</td>
                        @*<td class="tdleftalign">@item.CASE_CODE</td>*@
                        <td class="tdleftalign">
                            <a href="javascript:;" onclick="GetView2Action_Doc('@item.CASE_CODE')" data-title="Xem chi tiết">@item.CASE_CODE</a>
                        </td>
                        <td class="tdleftalign">@item.CONTENT</td>
                        <td class="tdleftalign">@item.REQUEST_BY_NAME</td>
                        <td class="tdcenteralign">
                            @item.REQUEST_DATE.ToDateStringN0()
                        </td>
                        <td class="tdleftalign">@item.PROCESSOR_BY_NAME</td>
                        <td class="tdcenteralign">
                            @{
                                TimeSpan TS = DateTime.Now - item.REQUEST_DATE;
                                int hour = TS.Days * 24 + TS.Hours;
                                int mins = TS.Minutes;
                                int secs = TS.Seconds;
                                string timeDiff = hour.ToString() + "h";
                            }
                            @timeDiff
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="9">Không có dữ liệu</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="_ClassPage">
    <ul>
        @Html.Raw(ViewBag.Paging)
    </ul>
</div>
<script>
    $(function () {
        RemindChangeIConSortWhenSortColumns();
    });

    function GetView2Action_Doc(_case_code) {
        if (CheckSessionTimeOut() == false) {
            return false;
        }
        try {
            var url = "quan-ly-docking/danh-sach-docking/show-complete-doc?p_case_code=" + _case_code;
            window.open(url);
            //window.location.href = url;
        } catch (e) {
            console.log(e.toString())
        }
    }
</script>