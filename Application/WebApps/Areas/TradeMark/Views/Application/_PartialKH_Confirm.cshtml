@using ObjectInfos;
@using BussinessFacade.ModuleMemoryData
@{
    //decimal _application_header_id = -1;
    //if (ViewBag.Application_Header_Id != null)
    //{
    //    _application_header_id = ViewBag.Application_Header_Id;
    //}

    var _AppHeaderInfo = new ApplicationHeaderInfo();
    if (ViewBag.objAppHeaderInfo != null)
    {
        _AppHeaderInfo = (ApplicationHeaderInfo)ViewBag.objAppHeaderInfo;
    }
}

<style>
    /*độ rộng tên cột title từng trang là khác nhau nên khai báo ở trang đó luôn*/
    .div-search-title > div {
        width: 200px;
    }
</style>

<div>
    <div class="div-search-ad">
        <div class="div-search-title">
            <div>KH Confirm<i class="redspan">(*)</i></div>
        </div>
        <div class="div-search-content">
            <div>
                <select id="cboConfirm">
                    @foreach (var item in MemoryData.AllCode_GetBy_CdTypeCdName("CUSTOMER", "CONFIRM"))
                    {
                        <option value="@item.CdVal">@item.Content</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="div-search-ad">
        <div class="div-search-title">
            <div>Ghi chú </div>
        </div>
        <div class="div-search-content">
            <div>
                <input type="text" id="txtNotes" maxlength="2000" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="form-group-bottom">
            <input type="submit" class="btn-default" value="Xác nhận" onclick="return do_KH_Confirm('@_AppHeaderInfo.Case_Code')" />
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

        //$('#cboConfirm').multipleSelect({
        //    filter: true,
        //    single: true,
        //    isdatastring: false,
        //    maxHeight: 150,
        //    placeholder: "-- Khách hàng phản hồi --"
        //});

    });

    function do_KH_Confirm(_case_code) {
        if (validateAction()) {
            nvsConfirm(null, "Bạn có chắc chắn muốn xác nhận đơn này không?", function () {
                $.ajax({
                    url: '/trade-mark-mana/quan-ly-don/do-kh-confirm',
                    type: 'POST',
                    data: {
                        p_case_code: _case_code,
                        p_status: $('#cboConfirm').val(),
                        p_note: $('#txtNotes').val()
                    },
                    async: true, cache: false, traditional: true,
                    beforeSend: function () {
                        CreateRollingWaitingIcon(true);
                    },
                    success: function (data) {
                        CreateRollingWaitingIcon(false);
                        if (data.success == "-1") {
                            jError("Lỗi check lại kết nối tới server");
                            return false;
                        }
                        else {
                            jAlert('Khách hàng phản hồi thành công!', "THÔNG BÁO", function () {
                                window.location.href = "/home";
                            });
                        }
                    },
                    error: function (e) {
                        CreateRollingWaitingIcon(false);
                        console.log(e);
                    }
                });
            });
        }
    }

    function validateAction() {
        var _Status = $('#cboConfirm').val();
        if (_Status == null) {
            jError('Action Confirm không được để trống!', "Lỗi", function () {
                $('#cboConfirm').multipleSelect('focus');
            });
            return false;
        }

        return true;
    }

</script>
