@using ObjectInfos;
@using BussinessFacade;
@{
    var _AppHeaderInfo = new ApplicationHeaderInfo();
    if (ViewBag.objAppHeaderInfo != null)
    {
        _AppHeaderInfo = (ApplicationHeaderInfo)ViewBag.objAppHeaderInfo;
    }

    BussinessFacade.ModuleUsersAndRoles.UserBL _UserBL = new BussinessFacade.ModuleUsersAndRoles.UserBL();
    List<UserInfo> _lstUsersNV = _UserBL.GetUserByType(Convert.ToDecimal(Common.CommonData.CommonEnums.UserType.Employee));
}

<style>
    /*độ rộng tên cột title từng trang là khác nhau nên khai báo ở trang đó luôn*/
    .div-search-title > div {
        width: 200px;
    }
</style>

<div>
    <div class="divCover cls_form_title">
        <img src="~/Content/icons/info.png" />
        <div class="cls_form_header">
            Phân loại cho NV nộp đơn
        </div>
    </div>

    <div class="div-search-ad">
        <div class="div-search-title">
            <div>Chọn NV nộp đơn<i class="redspan">(*)</i></div>
        </div>
        <div class="div-search-content">
            <div>
                <select id="cboEmployee">
                    @foreach (var item in _lstUsersNV)
                    {
                        <option value="@item.Id">@item.FullName</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="div-search-ad">
        <div class="div-search-title">
            <div>Ghi chú </div>
        </div>
        <div class="div-search-content">
            <div>
                <input type="text" id="txtNotes" maxlength="2000" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="form-group-bottom">
            <input type="submit" class="btn-default" value="Phân loại" onclick="return doPhanLoai()" />
        </div>
    </div>
</div>

<script>
    $(document).ready(function(){

        $('#cboEmployee').multipleSelect({
            filter: true,
            single: true,
            isdatastring: false,
            maxHeight: 150,
            placeholder: "-- Chọn nhân viên --"
        });

    });

    var _Employee_Id;

    function doPhanLoai() {
        if (validateAction()) {
            var formData = new FormData();
            collectObjectData(formData);
            nvsConfirm(null, "Bạn có chắc chắn muốn phân đơn này cho nhân viên đi nộp đơn hay không?", function () {
                $.ajax({
                    url: '/trade-mark-mana/quan-ly-don/do-phan-loai-employee',
                    type: 'POST',
                    data: {
                        p_Application_Header_Id: @_AppHeaderInfo,
                        p_employee: $('#cboEmployee').val(),
                        p_note: $('#txtNotes').val()
                    },
                    processData: false,
                    contentType: false,
                    traditional: true,
                    async: false,
                    headers: { "cache-control": "no-cache" },
                    success: function (data) {
                        if (data.success == "-1") {
                            jError("Lỗi check lại kết nối tới server");
                            return false;
                        }
                        else {
                            jAlert('Phân loại đơn cho nhân viên thành công!', "THÔNG BÁO", function () {
                                window.location.href = "/home";
                            });
                        }
                    },
                    error: function (e) {
                        console.log(e);
                    }
                });
            });
        }
    }

    function validateAction() {
        _Employee_Id = $('#cboEmployee').val();
        if (_Employee_Id == null || _Employee_Id == "0") {
            jError('Nhân viên không được để trống!', "Lỗi", function () {
                $('#cboEmployee').multipleSelect('focus');
            });
            return false;
        }

        return true;
    }
    
</script>
