@using ObjectInfos;
@using BussinessFacade.ModuleMemoryData
@{
    var _AppHeaderInfo = new ApplicationHeaderInfo();
    if (ViewBag.objAppHeaderInfo != null)
    {
        _AppHeaderInfo = (ApplicationHeaderInfo)ViewBag.objAppHeaderInfo;
    }
}

<style>
    /*độ rộng tên cột title từng trang là khác nhau nên khai báo ở trang đó luôn*/
    .div-search-title > div {
        width: 250px;
    }
</style>
<script src="~/Content/Datetimepicker_master/jquery.datetimepicker.full.min.js"></script>
<link href="~/Content/Datetimepicker_master/jquery.datetimepicker.min.css" rel="stylesheet" />
<script>
    $.datetimepicker.setLocale('vi');
    $(document).ready(function () {
        $('.datepicker').datetimepicker({
            format: 'd/m/Y',
            formatDate: 'd/m/Y',
            timepicker: false,
            mask: '39/19/9999',
            validateOnBlur: true,
        });
    });
</script>

<div>
    <div class="divCover cls_form_title">
        <img src="~/Content/icons/category.png" />
        <div class="cls_form_header">
            @WebApps.Resources.Resource.CongBoBang
        </div>
    </div>

    <div class="div-search-ad">
        <div class="div-search-title">
            <div>@WebApps.Resources.Resource.SoCongBoBang<i class="redspan">(*)</i></div>
        </div>
        <div class="div-search-content">
            <div>
                <input type="text" maxlength="100" id="txt_Notice_Number" />
            </div>
        </div>
    </div>

    <div class="div-search-ad">
        <div class="div-search-title">
            <div>@WebApps.Resources.Resource.NgayCongBo<i class="redspan">(*)</i></div>
        </div>
        <div class="div-search-content">
            <div>
                <input type="text" id="txt_notice_date" maxlength="100" class="datepicker" onblur = "onChangeNotice_Date()"/>
            </div>
        </div>
    </div>

    <div class="div-search-ad">
        <div class="div-search-title">
            <div>@WebApps.Resources.Resource.NextDeadline</div>
        </div>
        <div class="div-search-content">
            <div>
                <input type="text" id="txt_replies_deadline" maxlength="100" readonly="readonly" />
            </div>
        </div>
    </div>

    <div class="div-search-ad">
        <div class="div-search-title">
            <div>@WebApps.Resources.Resource.NoiDungChinh<i class="redspan">(*)</i></div>
        </div>
        <div class="div-search-content">
            <div>
                <input type="text" maxlength="2000" id="txt_advise_replies" />
            </div>
        </div>
    </div>

    <div class="div-search-ad">
        <div class="div-search-title">
            <div>@WebApps.Resources.Resource.Billing <i class="redspan">(*)</i></div>
        </div>
        <div class="div-search-content">
            <div>
                <a style="height: 20px !important;" href="javascript:;" onclick="getView2Insert('@_AppHeaderInfo.Case_Code')"> Yes </a>
            </div>
        </div>
    </div>

    @{
        string _id1 = "1";
        string _isValid1 = "1";
        string _model1 = _id1 + "|" + _isValid1 + "|" + WebApps.Resources.Resource.FileTrichXuatSHCN;
        @Html.Partial("~/Areas/TradeMark/Views/Application/_Partial_UploadFile.cshtml", _model1)
    }

    @{
        string _id2 = "2";
        string _isValid2 = "0"; ;
        string _model2 = _id2 + "|" + _isValid2 + "|" + WebApps.Resources.Resource.FileDich;
        @Html.Partial("~/Areas/TradeMark/Views/Application/_Partial_UploadFile.cshtml", _model2)
    }

    <div class="div-search-ad">
        <div class="div-search-title">
            <div>@WebApps.Resources.Resource.GhiChu <i class="redspan">(*)</i></div>
        </div>
        <div class="div-search-content">
            <div>
                <input type="text" id="txtNotes" maxlength="2000" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="form-group-bottom">
            <input type="submit" class="btn-default" value="@WebApps.Resources.Resource.Submit" onclick="return do_Submit('@_AppHeaderInfo.Case_Code')" />
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {

    });

    function onChangeNotice_Date() {
        try {

            var txt_notice_date = $("#txt_notice_date").val();
            if (checkDate("Ngày công bố", "#txt_notice_date", txt_notice_date) == false) {
                return false;
            }

            $.ajax({
                type: 'POST',
                url: '/quan-ly-billing/danh-sach-billing/change-date',
                data: {
                    p_date: txt_notice_date,
                },
                async: true, cache: false, traditional: true,
                success: function (data) {
                    CreateRollingWaitingIcon(false);
                    $("#txt_replies_deadline").val(data.success);
                }
            });
        } catch (e) {
            alert(e.toString());
        }
    }

    function getView2Insert(_case_code) {
        if (CheckSessionTimeOut() == false) {
            return false;
        }

        var url = "/quan-ly-billing/danh-sach-billing/show-insert-by-casecode?p_case_code=" + _case_code + "&p_type=" + @(Convert.ToDecimal(Common.CommonData.CommonEnums.Billing_Insert_Type.Grant_Public));
        window.open(url);

        $.ajax({
            type: 'POST',
            url: '/quan-ly-billing/danh-sach-billing/check-exits-billing/',
            data: {
                p_app_case_code: _case_code,
                p_type: '@Convert.ToDecimal(Common.CommonData.CommonEnums.Notice_Type.CongBo_Bang)',
            },
            headers: { "cache-control": "no-cache" },
            async: true, cache: false, traditional: true,
            beforeSend: function () {
                CreateRollingWaitingIcon(true);
            },
            success: function (data) {
                CreateRollingWaitingIcon(false);
                if (data.success > 0) {
                    var url = "/quan-ly-billing/danh-sach-billing/show-view-billing?id=" + data.success + "&case_code=" + _case_code;
                    window.open(url);
                }
                else {
                    var url = "/quan-ly-billing/danh-sach-billing/show-insert-by-casecode?p_case_code=" + _case_code + "&p_type=" + @(Convert.ToDecimal(Common.CommonData.CommonEnums.Billing_Insert_Type.Grant_Public));
                    window.open(url);
                }
            }
        });
    }

    function do_Submit(_case_code) {
        if (validateAction()) {
            nvsConfirm(null, "@Html.Raw(WebApps.Resources.Resource.ConfirmSubmit)", function () {


                var formdata = new FormData();
                formdata.append("pInfo.Case_Code", _case_code);
                formdata.append("pInfo.Notice_Number", $('#txt_Notice_Number').val());
                formdata.append("pInfo.Notice_Date", $('#txt_notice_date').val());
                formdata.append("pInfo.Accept_Date", $('#txt_notice_date').val());

                formdata.append("pInfo.Advise_Replies", $('#txt_advise_replies').val());
                formdata.append("pInfo.Note", $('#txtNotes').val());
                formdata.append("pInfo.Replies_Deadline", $('#txt_replies_deadline').val());

                // lưu file từ docketing
                formdata.append("pInfo.Notice_Url", $("#dock_url_1").val());
                formdata.append("pInfo.Notice_Trans_Url", $("#dock_url_2").val());

                // lay du lieu file
                //var pfile = $("#file_attach_1");//lay du lieu file
                //if (pfile.val() != "") {
                //    var _file = pfile[0].files[0];
                //    formdata.append("pInfo.File_Notice_Url", _file);
                //}

                //var pfile2 = $("#file_attach_2");//lay du lieu file
                //if (pfile2.val() != "") {
                //    var _file2 = pfile2[0].files[0];
                //    formdata.append("pInfo.File_Notice_Trans_Url", _file2);
                //}

                $.ajax({
                    url: '/trade-mark-mana/quan-ly-don/lawer-grant-public',
                    type: 'POST',
                    data: formdata,
                    enctype: 'multipart/form-data',
                    async: true, cache: false, traditional: true, contentType: false,
                    processData: false,
                    beforeSend: function () {
                        CreateRollingWaitingIcon(true);
                    },
                    success: function (data) {
                        CreateRollingWaitingIcon(false);
                        if (data.success == "-1") {
                            jError("@Html.Raw(WebApps.Resources.Resource.LoiCheckLai)");
                            return false;
                        }
                        else {
                            jAlert("@Html.Raw(WebApps.Resources.Resource.CapNhatDuLieuThanhCong)", "@Html.Raw(WebApps.Resources.Resource.ThongBao)", function () {
                                window.location.href = "/home";
                            });
                        }
                    },
                    error: function (e) {
                        CreateRollingWaitingIcon(false);
                        console.log(e);
                    }
                });
            });
        }
    }

    function validateAction() {
        var txt_Notice_Number = $("#txt_Notice_Number").val();
        if (txt_Notice_Number == null || txt_Notice_Number == "") {
            jError("Số thông báo không được để trống", "@Html.Raw(WebApps.Resources.Resource.Loi)", function () {
                $("#txt_Notice_Number").focus();
            });
            return false;
        }

        // check validate ngày
        var txt_notice_date = $("#txt_notice_date").val();
        if (checkDate("Ngày công bố", "#txt_notice_date", txt_notice_date) == false) {
            return false;
        }

        var txt_advise_replies = $('#txt_advise_replies').val();
        if (txt_advise_replies == null || txt_advise_replies == "") {
            jError('Nội dung chính không được để trống!', "@Html.Raw(WebApps.Resources.Resource.Loi)", function () {
                $('#txt_advise_replies').focus();
            });
            return false;
        }

        var txt_replies_deadline = $("#txt_replies_deadline").val();
        if (txt_replies_deadline != "" && txt_replies_deadline != "__/__/____") {
            if (checkDate("Next Deadline", "#txt_replies_deadline", txt_replies_deadline) == false) {
                return false;
            }
        }

        var _Note = $('#txtNotes').val();
        if (_Note == null || _Note == "") {
            jError("@Html.Raw(WebApps.Resources.Resource.GhiChuKhongDuocDeTrong)", "@Html.Raw(WebApps.Resources.Resource.Loi)", function () {
                $('#txtNotes').focus();
            });
            return false;
        }

        var _re = checkValidate_File("1");
        if (_re == false) {
            return false;
        }

        var _re = checkValidate_File("2");
        if (_re == false) {
            return false;
        }

        return true;
    }

</script>
