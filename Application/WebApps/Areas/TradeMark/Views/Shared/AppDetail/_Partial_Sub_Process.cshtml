<div style="width:100%;float:left;">
    @{
        _count = 0;
    }
    @foreach (var item in _lstStatus)
    {
        if (Convert.ToDecimal(item.CdVal) == (decimal)Common.CommonData.CommonEnums.Notice_Reject_Status.Cuc_TraLoi)
        {
            continue;
        }

        _count++;
        <div class="@("progress_div_sub_text" +  _count)"> @item.Content_Eng</div>
    }
</div>
<div style="width:100%;float:left;margin-top:0px">
    <hr class="progress_hr" />
    @{
        _count = 0;
    }
    @foreach (var item in _lstStatus)
    {
        if (Convert.ToDecimal(item.CdVal) == (decimal)Common.CommonData.CommonEnums.Notice_Reject_Status.Cuc_TraLoi)
        {
            continue;
        }

        _count++;
        _Checked = "";
        if (item.CdVal == _currstatus.ToString())
        {
            _Checked = "checked='checked'";
        }
        <div class="progress_div_radio"><input type="radio" name="name" disabled @_Checked /></div>
        <hr class="progress_hr_sub" />
    }
</div>
@if (_Listtodo.Count > 0)
{
    <div style="width:100%;float:left; margin-top:0px">
        @{
            _count = 0;
        }
        @foreach (var item in _lstStatus)
        {
            if (Convert.ToDecimal(item.CdVal) == (decimal)Common.CommonData.CommonEnums.Notice_Reject_Status.Cuc_TraLoi)
            {
                continue;
            }

            _count++;
            if (item.CdVal == _currstatus.ToString())
            {
                <div class="@("user_progress_active progress_div_user_sub" +  _count)"> @_FirstTodo.REQUEST_BY_NAME</div>
            }
            else
            {
                <div class="@("user_hidden progress_div_user_sub" +  _count)">@_FirstTodo.REQUEST_BY_NAME </div>
            }
        }
    </div>
}

