@using ObjectInfos;
@{
    List<SysAppFixChargeInfo> _list_data = new List<SysAppFixChargeInfo>();
    if (ViewBag.listData != null)
    {
        _list_data = ViewBag.listData;
    }
    int stt = 0;
}
<div>
    <table class="table-lst-data" id="tableListGroupUser">
        <thead>
            <tr>
                <th class="class30">STT</th>
                <th class="class150" data-sort id="Appcode">Đơn</th>
                <th class="class100" data-sort id="Appcode">Phí</th>
                <th class="class100">Số lượng</th>
                <th class="class150" data-sort id="Appcode">Mô tả</th>
                <th class="class100">Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @if (_list_data.Count > 0)
            {
                foreach (var item in _list_data)
                {
                    ++stt;
                    <tr>
                        <td class="tdcenteralign">@stt</td>
                        <td class="tdcenteralign">@item.Appcode</td>
                        <td class="tdrightalign">@item.Amount.ToString("#,##0")</td>
                        <td class="tdrightalign">@item.Char01</td>
                        <td class="tdleftalign">@item.Description</td>
                        <td class="tdcenteralign">
                            <a href="javascript:;" onclick="funcGetView2Edit(@item.Id,'@item.Appcode')" class="icon icon-edit" data-title="Sửa"></a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="10">Không có dữ liệu</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="_ClassPage">
    <ul>
        @Html.Raw(ViewBag.Paging)
    </ul>
</div>
